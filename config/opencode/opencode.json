{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "./plugins/auto-verify.js",
    "./plugins/tool-optimizer.js"
  ],
  "disabled_providers": [
    "openai",
    "anthropic",
    "google",
    "groq",
    "azure",
    "openrouter"
  ],
  "model": "llama/local",
  "provider": {
    "llama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:9091/v1",
        "apiKey": "none"
      },
      "models": {
        "local": {
          "id": "local",
          "limit": {
            "context": 65536,
            "output": 8192
          }
        }
      }
    }
  },
  "agent": {
    "build": {
      "model": "llama/local",
      "description": "Build and execute tasks",
      "permission": {
        "read": "allow",
        "bash": "allow",
        "edit": "allow",
        "write": "allow",
        "glob": "allow",
        "grep": "allow",
        "todowrite": "allow",
        "task": "allow",
        "webfetch": "allow"
      }
    },
    "plan": {
      "model": "llama/local",
      "description": "Plan implementations",
      "permission": {
        "read": "allow",
        "bash": "deny",
        "edit": "deny",
        "write": "deny",
        "glob": "allow",
        "grep": "allow",
        "todowrite": "allow",
        "task": "allow",
        "webfetch": "allow"
      }
    },
    "lite": {
      "model": "llama/local",
      "description": "Quick queries and info lookup",
      "permission": {
        "read": "allow",
        "bash": "deny",
        "edit": "deny",
        "write": "deny",
        "glob": "allow",
        "grep": "allow",
        "todowrite": "deny",
        "task": "deny",
        "webfetch": "deny"
      }
    }
  }
}
