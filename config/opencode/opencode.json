{
  "$schema": "https://opencode.ai/config.json",
  "disabled_providers": [
    "openai",
    "anthropic",
    "google",
    "groq",
    "azure",
    "openrouter"
  ],
  "model": "llama/qwen2.5-coder-1.5b",
  "provider": {
    "llama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:9090/v1",
        "apiKey": "none"
      },
      "models": {
        "qwen3-coder": {
          "id": "qwen3-coder"
        },
        "qwen2.5-coder-1.5b": {
          "id": "qwen2.5-coder-1.5b"
        }
      }
    }
  },
  "mode": {
    "build": {
      "model": "llama/qwen3-coder",
      "prompt": "{file:./AGENTS.md}",
      "tools": {
        "read": true,
        "bash": true,
        "edit": true,
        "write": true,
        "glob": true,
        "grep": true,
        "todowrite": true,
        "task": true,
        "webfetch": true
      }
    },
    "plan": {
      "model": "llama/qwen3-coder",
      "prompt": "{file:./AGENTS.md}",
      "tools": {
        "read": true,
        "bash": false,
        "edit": false,
        "write": false,
        "glob": true,
        "grep": true,
        "todowrite": true,
        "task": true,
        "webfetch": true
      }
    },
    "lite": {
      "model": "llama/qwen2.5-coder-1.5b",
      "prompt": "You are a helpful assistant.",
      "tools": {
        "read": true,
        "bash": false,
        "edit": false,
        "write": false,
        "glob": true,
        "grep": true,
        "todowrite": false,
        "task": false,
        "webfetch": false
      }
    },
    "bare": {
      "model": "llama/qwen2.5-coder-1.5b",
      "prompt": "You are a helpful assistant.",
      "tools": {
        "read": false,
        "bash": false,
        "edit": false,
        "write": false,
        "glob": false,
        "grep": false,
        "todowrite": false,
        "task": false,
        "webfetch": false
      }
    }
  }
}
