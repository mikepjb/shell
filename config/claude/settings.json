{
  "permissions": {
    "allow": [
      "Skill(analyze)",
      "Skill(api-design)",
      "Skill(debug)",
      "Skill(implement)",
      "Skill(plan)",
      "Skill(review)",
      "Skill(ui-design)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git blame:*)",
      "Bash(git stash list:*)",
      "WebSearch",
      "WebFetch(domain:github.com)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true
  },
  "defaultModel": "sonnet"
}
