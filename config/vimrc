set nocompatible
syn on

colorscheme spartan

set mouse=a
set nu
set clipboard=unnamed,unnamedplus

inoremap <C-c> <Esc>
nnoremap S <C-^>

function! SynGroup()
    let l:s = synID(line('.'), col('.'), 1)
    echo synIDattr(l:s, 'name') . ' -> ' . synIDattr(synIDtrans(l:s), 'name')
endfunc

nnoremap zA :call SynGroup()<CR>
